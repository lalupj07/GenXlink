{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "turnserver -c /etc/coturn/turnserver.conf --external-ip=$RAILWAY_PUBLIC_DOMAIN",
    "restartPolicyType": "ON_FAILURE"
  }
}
